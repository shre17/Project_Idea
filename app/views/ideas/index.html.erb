
<%- model_class = Idea -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:idea_title) %></th>
      <th><%= model_class.human_attribute_name(:idea_descripition) %></th>
     <!--  <th><%#= model_class.human_attribute_name(:idea_attachment) %></th> -->
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= link_to idea.id, idea_path(idea) %></td>
        <td><%= idea.idea_title %></td>
        <td><%= idea.idea_descripition %></td>
        <!-- <td><%#= link_to "Download File", idea.idea_attachment.url, target: "_blank", class: 
        "btn btn-primary" %></td> -->
        <td><%= idea.user_id %></td>
        <td><%=l idea.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      idea_path(idea), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_idea_path(idea), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      idea_path(idea),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_idea_path,
            :class => 'btn btn-primary' %>
